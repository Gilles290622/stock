PORT=3001
# Choose DB driver: mysql | sqlite
DB_DRIVER=sqlite
# MySQL settings (used if DB_DRIVER=mysql)
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=jts_services_db
# SQLite settings (used if DB_DRIVER=sqlite)
SQLITE_FILE=./data/app.sqlite

# JWT secret for auth tokens
JWT_SECRET=replace-with-a-random-32-bytes-base64

# Remote MySQL (Hostinger caisses) for replication
# Set these to enable remote write-through replication on CRUD
REMOTE_DB_HOST=
REMOTE_DB_USER=
REMOTE_DB_PASSWORD=
REMOTE_DB_NAME=
# Enable SSL when using shared hosting (recommended)
REMOTE_DB_SSL=true

# Public base URL (optional, to build absolute URLs for uploaded logos)
# APP_URL=https://jts-services.shop
