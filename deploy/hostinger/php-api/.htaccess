RewriteEngine On

# Contexte sous-dossier /stock
# Si ce .htaccess est plac√© dans public_html/stock/

# API routing local: /stock/api/* vers api/index.php
RewriteRule ^api/?(.*)$ api/index.php [QSA,L]

# Frontend SPA fallback: servir index.html pour toute route non-fichier/dossier
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . index.html [L]
